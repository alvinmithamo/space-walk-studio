generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  title     String
  tours     Tour[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  publicId  String?   @unique // For public sharing link
}

model Tour {
  id        Int       @id @default(autoincrement())
  projectId Int
  project   Project   @relation(fields: [projectId], references: [id])
  images    Image[]
  hotspots  Hotspot[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Image {
  id        Int       @id @default(autoincrement())
  tourId    Int
  tour      Tour      @relation(fields: [tourId], references: [id])
  url       String    // S3 or local file path
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Hotspot {
  id        Int       @id @default(autoincrement())
  tourId    Int
  tour      Tour      @relation(fields: [tourId], references: [id])
  label     String
  position  Json      // { x: number, y: number, z: number } for 3D coords
  targetImageId Int?  // Links to another image for navigation
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}